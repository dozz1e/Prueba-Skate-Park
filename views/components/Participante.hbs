<section id="participante">
	<div class="container">
		<div class="row p-2">
			<div class="col-md-4 p-0">
				<img src="{{usuario.foto}}" alt="{{usuario.nombre}}" width="250px"/>
			</div>
			<div class="col-md-8 d-flex align-items-center">
				<h1>{{usuario.nombre}}</h1>
			</div>
      {{#if mensaje}}
        <div
          class="mt-2 py-2 alert {{#if error}}alert-danger{{else}}alert-success{{/if}} d-flex align-items-center"
          role="alert"
          id="errorEditar"
        >
          {{texto}}
        </div>
      {{/if}}
		</div>
		<div class="row">
			<ul class="nav nav-tabs" id="myTab" role="tablist">
				<li class="nav-item" role="presentation">
					<button
						class="nav-link active"
						id="perfil-tab"
						data-bs-toggle="tab"
						data-bs-target="#perfil"
						type="button"
						role="tab"
						aria-controls="perfil"
						aria-selected="true"
					>Perfil</button>
				</li>
				<li class="nav-item" role="presentation">
					<button
						class="nav-link"
						id="editar-tab"
						data-bs-toggle="tab"
						data-bs-target="#editar"
						type="button"
						role="tab"
						aria-controls="editar"
						aria-selected="false"
					>Editar</button>
				</li>
			</ul>
			<div class="tab-content" id="myTabContent">
				<div
					class="tab-pane fade show active"
					id="perfil"
					role="tabpanel"
					aria-labelledby="perfil-tab"
				>
					<table class="table">
						<tbody>
							<tr>
								<th scope="row">Nombre</th>
								<td>{{usuario.nombre}}</td>
							</tr>
							<tr>
								<th scope="row">Email</th>
								<td>{{usuario.email}}</td>
							</tr>
							<tr>
								<th scope="row">Experiencia</th>
								<td>{{usuario.anos_experiencia}} año(s)</td>
							</tr>
							<tr>
								<th scope="row">Especialidad</th>
								<td>{{usuario.especialidad}}</td>
							</tr>
						</tbody>
					</table>
				</div>
				<div
					class="tab-pane fade"
					id="editar"
					role="tabpanel"
					aria-labelledby="editar-tab"
				>
					<form id="formEditar" method="POST" action="/editar/{{usuario.id}}" class="mb-0">
						<div class="form-group row m-auto">
							<div class="form-group col-12 col-sm-6 py-2">
								<label>Email</label>
								<input
									id="emailEditar"
									name="emailEditar"
									type="email"
									class="form-control m-auto"
									value="{{usuario.email}}"
									disabled
								/>
							</div>
							<div class="form-group col-12 col-sm-6 py-2">
								<label>Nombre</label>
								<input
									id="nombreEditar"
									name="nombreEditar"
									type="text"
									class="form-control m-auto"
									value="{{usuario.nombre}}"
									required
								/>
							</div>
							<div class="form-group col-12 col-sm-6 py-2">
								<label>Password</label>
								<input
									id="pass1Editar"
									name="pass1Editar"
									type="password"
									class="form-control m-auto"
								/>
							</div>
							<div class="form-group col-12 col-sm-6 py-2">
								<label>Repita la password</label>
								<input
									id="pass2Editar"
									name="pass2Editar"
									type="password"
									class="form-control m-auto"
								/>
							</div>
							<div class="form-group col-12 col-sm-6 py-2">
								<label>Años de experiencia</label>
								<input
									id="expEditar"
									name="expEditar"
									type="number"
									min="1"
									class="form-control m-auto"
									value="{{usuario.anos_experiencia}}"
									required
								/>
							</div>
							<div class="form-group col-12 col-sm-6 py-2">
								<label>Especialidad</label>
								<input
									id="especialidadEditar"
									name="especialidadEditar"
									type="text"
									class="form-control m-auto"
									value="{{usuario.especialidad}}"
									required
								/>
							</div>
						</div>
						<button
							name="btnEditar"
							class="btn btn-success mb-3"
							id="btnEditar"
						>Editar</button>
					</form>
					<form action="/eliminar/{{usuario.id}}" method="POST">
						<button
							name="btnEliminar"
							class="btn btn-danger mb-3"
							id="btnEliminar"
							type="submit"
						>Eliminar</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	#participante .container{ background: rgba(0,0,0,.1); margin-top: 80px; }
	#participante h1{ text-transform: uppercase; }
</style>